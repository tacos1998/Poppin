<div class="btn-group now-playing" id="refresh">
  <button type="button" class="btn btn-xs btn-default dropdown-toggle" id="now-playing-btn" data-toggle="dropdown" data-target="#" aria-haspopup="true" aria-expanded="false">
    NOW POPPIN
    <span class="caret"></span>
  </button>
  <div class="user_avatars_savor dropdown-menu dropdown-menu-form" aria-labelledby="dropdownMenu2">
    <% User.all.each do |user| %>
      <% if user.last_seen? && user.last_seen > 10.minutes.ago %>
        <%= link_to gravatar_for(user, size: 30), user %>
      <% end %>
    <% end %>
  </div>
</div>

<!--make feed refreshable -->
<script>
  setInterval( function() {
    $("#refresh").load(location.href+" #refresh>*", "");
  }, 30000);
</script>