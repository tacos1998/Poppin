<% provide(:title, 'Reset password') %>
<div class="well animated fadeIn">
  <h1 id="coolify-title" class="animated zoomInDown">Password reset</h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
  
        <%= hidden_field_tag :email, @user.email %>
  
        <%= f.label :password, class:'animated bounce' %>
        <%= f.password_field :password, class: 'form-control animated bounceInLeft' %>
  
        <%= f.label :password_confirmation, class: 'animated bounce' "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control animated bounceInRight' %>
  
        <%= f.submit "Update password", class: "btn btn-primary animated bounceInUp" %>
      <% end %>
    </div>
  </div>
</div>